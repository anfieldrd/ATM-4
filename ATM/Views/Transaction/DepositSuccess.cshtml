@model ATM.Models.Transaction

@{
    ViewBag.Title = "DepositSuccess";
}

<h2>Deposit succeeded</h2>

<div>
   
    <hr />
    <div>You successfully deposited @String.Format("{0:c}", Model.Amount) to your account - @Model.CheckingAccount.Name, account number @Model.CheckingAccount.AccountNumber</div>
    <p></p>

    <p>Your new balance is:</p>
    <p></p>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CheckingAccount.AccountNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckingAccount.AccountNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CheckingAccount.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CheckingAccount.Balance)
        </dd>

    </dl>
</div>

